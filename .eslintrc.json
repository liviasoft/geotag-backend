{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "prettier/prettier": [
        "warn",
        {
          "singleQuote": true,
          "semi": true,
          "parser": "typescript"
        }
      ]
    }
}
